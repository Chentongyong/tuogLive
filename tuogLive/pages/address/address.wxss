/* pages/addressList/addressList.wxss */

page {
  background: #eee;
}


.address_box {
  /* width: 100%; */
  display: flex;
  padding: 0 40rpx;
  height: 178rpx;
  background: #fff;
  margin-top: 16rpx;
  overflow: hidden;
  position: relative;
}

.list_address {
  /* width: 100%; */
  height: 178rpx;
  position: relative;
  left: 0;
  width: 100%;
  transition: all 0.3s;
}

.info {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  display: flex;
  margin-bottom: 24rpx;
  margin-top: 50rpx;
}

.phone {
  margin-left: 34rpx;
}

.address {
  font-size: 26rpx;
  color: #999;
}

.bottom {
  width: 240rpx;
  height: 178rpx;
  color: #fff;
  display: flex;
  line-height: 178rpx;
  text-align: center;
  position: absolute;
  top: 0;
  right: -240rpx;
  transition: all 0.3s;
}

.edit {
  width: 120rpx;
  height: 100%;
  background: #ef4444;
}

.delect {
  width: 120rpx;
  height: 100%;
  background: #ef4444;
  opacity: 0.7;
}

.addAddress {
  width: 100%;
  background: #fff;
  padding: 16rpx 0;
  position: fixed;
  bottom: 0;
}

.addAddress button {
  width: 670rpx;
  height: 80rpx;
  color: #fff;
  background: #333;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 26rpx;
}

.address_box.active .list_address {
  left: -240rpx;
}

.address_box.active .bottom {
  right: 0;
}

.noAddress{
  text-align: center
}