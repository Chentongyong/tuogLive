/* pages/authorization/authorization.wxss */
.authorization{
  width: 100%;
  height: 100%;
  background: b2b2b2;
  position: fixed;
  top: 0;
  left: 0
}
.zuthBox{
  width: 550rpx;
  height:560rpx;
  background: #fff;
  border-radius: 10px;
  margin: 0 auto;
  padding-top: 50rpx;
  position: relative;
  top: 300rpx;
}
.img{
  display: block;
  width: 264rpx;
  height: 264rpx;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: -120rpx;
  background: #fff;
}
.title{
  font-size: 30rpx;
  color: #333;
  margin-top: 50rpx;
  padding: 0 40rpx;
}
.textBox{
  margin: 30rpx;
  font-size: 24rpx;
  color: #999;
  height: 60rpx
}
.butBox{
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  position: relative;
  top: 30rpx
}
.butBox .box_left{
  font-size: 30rpx;
  color:#333;
}
.butBox .box_right{
  width: 240rpx;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color:#fff;
  background: #333;
  border-radius: 25px;
  padding: 0;
  margin: 0;
  border: 0
}