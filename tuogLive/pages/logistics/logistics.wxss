.logistics{
  height: 100%;
  overflow: scroll
}
.header{
  padding: 0 40rpx;
  background: #333;
  height: 200rpx;
  display: flex;
  justify-content: space-between
} 
.header .headLeft{
  margin-top: 50rpx;
  font-size: 34rpx;
  color: #fff;
}
.header .headText{
  display: block;
  font-size: 28rpx;
  margin-top: 22rpx;
}
.header image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 50rpx;
}

.logisticsBox{
  padding: 0 42rpx;
  margin-top: 112rpx;
}
.listBox{
  width: 100%;
  /* height: 140rpx; */
  border-left: 2px solid #D5D4D9;
  position: relative;
  padding-bottom: 20px;
}
.listBox:nth-last-child(1){
  border-left:0
}
.bigCircle{
  width: 32rpx;
  height: 32rpx;
  background: #D5D4D9;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: -20rpx
}
.bigBack{
  background: #fff;
}
.littleCircle{
  width: 22rpx;
  height: 22rpx;
  margin: 5rpx auto;
  background: #D5D4D9;
  border-radius: 50%
}
.little{
  background: #333;
}
.listBox_right{
  margin-left: 43rpx;
}
.right_text{
  font-size: 28rpx;
  color: #999;
}
.rig_titles{
  color: #333;
}
.right_time{
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}